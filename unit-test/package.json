{
  "name": "unit-test",
  "version": "1.0.0",
  "description": "Learning unit test jest",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage" : true,
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 40,
        "lines": 40,
        "statements": -40
      }
    }
  },
  "author": "ahsantawil",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.19.0",
    "babel-jest": "^29.0.3",
    "jest": "^29.0.3"
  }
}
